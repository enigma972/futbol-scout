{% extends 'layout.html.twig' %}

{% block title %}Page d'acceuil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href=" {{ asset('build/flux.css') }} ">
{% endblock %}

{% block section %}
	<div class="custom-container container-fluid">
		<div class="row my-2">
			<div class="col-lg-3 mb-2 .d-none .d-lg-block .d-xl-none">
				{% include 'user/user-summary.html.twig' %}
			</div>
			<div class="col-lg-5">
				<div class="row">
					<div class="col">
						{% include 'post/post-form.html.twig' %}
					</div>
				</div>
				{% for message in app.session.flashbag.get('info') %}
                <div class="row mt-2">
                	<div class="col">
                		<div class="alert alert-success alert-dismissible fade show rounded-0" role="alert">
	                        {{message}}
	                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	                            <span aria-hidden="true">&times;</span>
	                        </button>
	                    </div>
                	</div>
                </div>
                {% endfor %}
				<hr>
				{% for post in posts %}
					{% include 'post/post-card.html.twig' %}
				{% else %}
				<div class="row">
					<div class="col-lg-10 bg-white mx-auto text-center p-4 font-weight-bold">
						Aucune publication pour le moment
					</div>
				</div>  
				{% endfor %}

				{% if page <= nbParPage %}
				<div class="row my-4">
					<div class="col">
						<a href="{{ path('home', {'page': page}) }}" class="btn btn-block btn-custom-outline-danger rounded-0 text-decoration-none">Voir plus</a>
					</div>
				</div>
				{% endif %}
			</div>
			<div class="col-lg-4 .d-none .d-lg-block .d-xl-none">
				{{ render(path('user_suggestions', {'id': app.user.id }))}}
			</div>
		</div>
	</div>
{% endblock %}