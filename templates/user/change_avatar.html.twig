{% extends 'layout.html.twig' %}

{% block title %}Page d'acceuil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href=" {{ asset('build/flux.css') }} ">
{% endblock %}

{% block section %}
	<div class="custom-container container-fluid">
		<div class="row col-md-6 mx-auto mt-2">
			{% for message in app.session.flashbag.get('info') %}
            <div class="row">
            	<div class="col">
            		<div class="alert alert-success alert-dismissible fade show rounded-0" role="alert">
                        {{message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
            	</div>
            </div>
        	{% endfor %}

	        <div class="row bg-white border shadow-sm my-2">
				<div class="col p-4 m-2">
					<div class="row mx-1 mb-3">
						<h6 class="font-weight-bold">Votre photo de profil</h6>
						<p style="font-size: small;">Veuillez choisir une photo pour que vos fans puissent vous reconna√Ætre</p>
					</div>
					<div class="row">
						<div class="col">
							<img src=" {{ asset(app.user.avatar.path) }} " alt="" style="width: 150px; heigth: 150px;" class="img-thumbnail">
						</div>
						<div class="col my-auto">
							<form action="{{ path('user_change_avatar') }}" method="post" enctype="multipart/form-data">
								<div class="row">
									<div class="col-md-9">
										<div id="" class="row mx-auto form-group">
							        		<div class="custom-file">
												<input type="file" class="custom-file-input" name="avatar" id="customFile">
							        			<label for="customFile" class="custom-file-label" style="overflow: hidden;">Choisissez un fichier</label>
											</div>
							        	</div>
									</div>
								</div>
								<div class="row mt-0">
									<div class="col-md-9">
										<button class="btn btn-custom-danger btn-block shadow-sm" disabled="disabled">
											<i class="fas fa-camera fa-lg"></i>
										</button>
									</div>
								</div>
								<div class="row mt-3">
									<div class="col-md-9">
										<button type="submit" class="btn btn-custom-danger btn-block shadow-sm">
											Continuer <i class="fas fa-angle-double-right
"></i>
										</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}